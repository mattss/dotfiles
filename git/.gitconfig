[user]
	name = Matthew Sital-Singh
	email = mattss@netsight.co.uk

[branch]
autosetupmerge = true
autosetuprebase = always

[push]
default = current

[core]
excludesfile = /Users/mattss/.gitignore

[color]
diff = auto
branch = auto
status = auto

[diff]
renames = true

[alias]
m = merge --no-ff
st = status
stat = status
ai = add -i
ap = add -p
d = diff
r = remote
dc = diff --cached
ci = commit -v
cia = commit -v -a
co = checkout
cp = cherry-pick
cb = checkout -b
pr = pull-request
l = log
ll = log -p
b = branch
reha = reset --hard
info = !git remote show origin | grep URL
lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
unstash = stash apply

[help]
autocorrect = 5
